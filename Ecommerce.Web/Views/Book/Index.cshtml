@model IEnumerable<BookViewModel>

<div class="container py-4">
	<h2 class="text-center mb-4">Danh sách sách</h2>

	<div class="row g-4">
		@foreach (var item in Model)
		{
			<div class="col-12 col-sm-6 col-lg-4">
				<div class="card h-100 shadow-sm book-card">
					<img src="@item.Images.FirstOrDefault()" class="card-img-top" alt="Ảnh bìa sách" style="height: 300px; object-fit: cover;">
					<div class="card-body d-flex flex-column">
						<h5 class="card-title">@item.Name</h5>
						<p class="card-text text-truncate" title="@item.Description">@item.Description</p>
						<a href="#" class="btn btn-outline-primary mt-auto">Xem chi tiết</a>
					</div>
				</div>
			</div>
		}
	</div>
</div>

<style>
	.book-card {
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

		.book-card:hover {
			transform: scale(1.03);
			box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
		}

	.card-text.text-truncate {
		max-height: 4.5em;
		overflow: hidden;
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
	}
</style>
